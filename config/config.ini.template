; encoding: utf-8

; 快捷键
ACTIVATION=<shift>+<alt>+x
; 悬浮窗输入热键
FLOATING_INPUT=<shift>+<alt>+q
; 快捷键设置使用的分隔符
AND=+

; 输出音量
VOLUME=1.0
; 输出设备
DEVICE=CABLE Input (VB-Audio Virtual Cable)

; TTS 引擎选择
; 可选值:
; - pyttsx3_tts: 系统内置 TTS（默认）
; - api_tts: 本地 API TTS（端口 10086）
; - fish_audio_tts: Fish Audio TTS（需要配置 API Key）
TTS_ENGINE=fish_audio_tts

; Fish Audio API 配置
; 请在 Fish Audio 网站上注册并获取 API Key
FISH_API_KEY=your_api_key_here
; Fish Audio 参考 ID
; 参考 ID 可在 Fish Audio 网站上获取，通常是一个字符串
FISH_REFERENCE_ID=your_reference_id_here

; Fish Audio 服务器配置
FISH_SERVER_HOST=127.0.0.1
FISH_SERVER_PORT=10087

; Fish Audio TTS 参数配置
FISH_MODEL=speech-1.5
FISH_LATENCY=normal
FISH_FORMAT=opus
FISH_TEMPERATURE=0.7
FISH_TOP_P=0.7
FISH_SPEED=1.0
FISH_VOLUME=0